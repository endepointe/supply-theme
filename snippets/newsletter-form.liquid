<div class="footer-newsletter-form">
  {% form 'customer' %}
    {{ form.errors | default_errors }}
    {% if form.posted_successfully? %}
      <p class="note form-success">{{ 'layout.footer.newsletter_confirmation' | t }}</p>
    {% else %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div class="footer-input-group">
        <label for="Email" class="visually-hidden">{{ 'contact.form.email' | t }}</label>
        <input type="email" 
          value="{% if customer %}{{ customer.email }}{% endif %}" 
          placeholder="{{ 'layout.footer.newsletter_email_placeholder' | t }}" 
          name="contact[email]" 
          id="Email" 
          class="footer-input-group-field" 
          aria-label="{{ 'layout.footer.newsletter_email_placeholder' | t }}" 
          autocorrect="off" autocapitalize="off">
        <span class="footer-input-group-btn">
          <button type="submit" class="btn{% if button == 'secondary' %}-secondary{% endif %} btn--small" name="commit" id="subscribe">{{ 'layout.footer.newsletter_sign_up' | t }}</button>
        </span>
      </div>
    {% endif %}
  {% endform %}
</div>
